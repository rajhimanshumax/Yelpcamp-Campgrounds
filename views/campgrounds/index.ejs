<%-include("../partials/header.ejs")%>
<div class="container">
  <header class="jumbotron">
    <div class="container">
    <h1>WELCOME TO YELPCAMP</h1>
    <p>View our handpicked campgrounds form all over the world</p>
    <p>
      <a class="btn btn-primary btn-large"href="/campgrounds/new">Add new camp</a>
    </p>
  </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <%for(i=0;i<camp.length;i++){%>
      <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
              <img src="<%=camp[i].image%>">
              <div class="caption">
               <%=camp[i].name%>
               </div>
               <div>
                 <p>
                  <a href="/campgrounds/<%=camp[i]._id%>" class="btn btn-primary">More info</a>
                 </p>
               </div>
         </div>
    </div>
      <%}%>
  </div>
</div>

<%- include("../partials/footer.ejs")%>